<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0"
            prefWidth="1200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.Controller">
    <center>
        <SplitPane dividerPositions="0.8753581661891118" orientation="VERTICAL" prefHeight="0.0" prefWidth="0.0"
                   BorderPane.alignment="CENTER">
            <items>
                <AnchorPane fx:id="anchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                            minWidth="-Infinity" onMouseClicked="#putFood" prefHeight="600.0" prefWidth="1200.0"
                            style="-fx-background-color: rgba(141, 215, 138, 0.67);">
                    <children>
                        <AmbientLight color="CHARTREUSE" disable="true" layoutX="600.0" layoutY="300.0"/>
                    </children>
                </AnchorPane>
                <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                      minWidth="-Infinity" prefHeight="100.0" prefWidth="1200.0"
                      style="-fx-background-color: rgb(75, 79, 77);">
                    <children>
                        <Label text="Taille" textFill="WHITE"/>
                        <Slider fx:id="slider_size" prefHeight="10.0" prefWidth="100.0">
                            <HBox.margin>
                                <Insets left="5.0" right="15.0"/>
                            </HBox.margin>
                        </Slider>
                        <Label fx:id="label_error" alignment="BOTTOM_CENTER" prefHeight="20.0" textAlignment="CENTER"
                               textFill="white">

                        </Label>
                        <Button fx:id="button_start" onAction="#start" onKeyPressed="#onPressEnter" text="Start"
                                textAlignment="CENTER">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>
